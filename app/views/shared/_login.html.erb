<% semantic_form_for symbol, :url => path do |form| %>
  <% form.inputs do %>
    <%= form.input :login %>
    <% if symbol == :github %>
      <%= form.input :password, :as => :password, :label => "Token" %>
    <% else %>
      <%= form.input :password, :as => :password %>
    <% end %>
  <% end %>
  <% form.buttons do %>
    <%= submit_tag "Login", :class => "submit" %>
    <%= indicator %>
  <% end %>
<% end %>

