<ul id="pivotal_tracker_menu" class="pivotal_menu">
  <% if session[:pivotal_tracker_token] %>
    <li>Welcome <%= h(session[:pivotal_tracker_username]) %></li>
    <li>|</li>
    <li id="pivotal_menu_projects">
      <%= link_to_remote "Projects", 
        :url => list_pivotal_tracker_projects_path,
        :loading => "$('#projects_menu_spinner').toggle(); $('#pivotal_projects_menu_link').toggle()", 
        :complete => "$('#projects_menu_spinner').toggle(); $('#pivotal_projects_menu_link').toggle()", 
        :method => :get, 
        :html => {:id => "pivotal_projects_menu_link"} %><%= image_tag "indicators/small.gif", :id => "projects_menu_spinner", :style => "display:none;" %></li>
    <li>|</li>
    <li id="pivotal_menu_logout"><%= link_to "Logout", "#", :onclick => "javascript:void(0);"%></li>
  <% else %>
    <li id="pivotal_menu_login"><%= link_to "Login", "#", :onclick => "javascript:void(0);" %></li>
  <% end %>
</ul>
<div class="clear"></div>