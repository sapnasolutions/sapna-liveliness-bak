<div class="wait_for_wrapper"> 
  <div class="wait_for">
    
    <div class="navigation">
      <%= navigation %>
    </div>

    <div class="message">
      Please fill in your <%= type %> details!      
    </div>

  </div>
  <%= indicator :size => :big, :class => "big_indicator", :message => "loading dates ..." %>
  <%= indicator :size => :big, :class => "big_indicator_#{parent}", :message => "loading #{parent} ..." %>
  <%= indicator :size => :big, :class => "big_indicator_#{children}", :message => "loading #{children} ..." %>
</div>