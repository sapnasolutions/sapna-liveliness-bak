<% semantic_form_for :pivotal_tracker, :url => login_pivotal_tracker_users_path do |form| %>
  <% form.inputs do %>
    <%= form.input :login %>
    <%= form.input :password, :as => :password %>
  <% end %>
  <% form.buttons do %>
    <%= submit_tag "Login", :class => "submit" %>
    <%= indicator %>
  <% end %>
<% end %>

